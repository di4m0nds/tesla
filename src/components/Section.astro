---
const { color, title, subtitle, id } = Astro.props
const textColor = `text-${color}`
---

<section
	id={id}
	class="landing-section bg-black w-full h-screen text-center overflow-hidden relative"
	data-header-color={color}
>
	<div class="relative z-30 h-full flex flex-col">
		<header class="flex flex-col">
			<h2 class={`${textColor} pt-40 text-[50px] font-bold`}>
				{title}
			</h2>
			<p class={`${textColor} text-xl font-medium font-sans-default`}>
				{subtitle}
			</p>
		</header>
		<footer class="flex flex-grow flex-nowrap items-end justify-center pb-20">
            <slot name="footer"></slot>
		</footer>
	</div>

	<div class="absolute top-0 bottom-0 z-10">
        <slot name="background"></slot>
	</div>
</section>